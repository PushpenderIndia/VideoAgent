# Video Generation Agent System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google Gemini API Key (Required for AI content generation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API Key (Optional - for high-quality voice synthesis)
# Get your API key from: https://elevenlabs.io/
# If not provided, the system will fall back to Google Text-to-Speech (gTTS)
ELEVEN_LABS_API=your_elevenlabs_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Getty Images API Key (Optional - for official API access)
# Currently the system uses web scraping, but you can get an official API key from:
# https://developers.gettyimages.com/
GETTY_IMAGES_API_KEY=your_getty_api_key_here

# Video Output Settings
OUTPUT_VIDEO_QUALITY=medium  # Options: low, medium, high
OUTPUT_VIDEO_FPS=24          # Frames per second
OUTPUT_AUDIO_BITRATE=128k    # Audio bitrate

# Manim Configuration
MANIM_QUALITY=medium_quality # Options: low_quality, medium_quality, high_quality
MANIM_OUTPUT_FORMAT=mp4      # Output format for mathematical animations

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (set to true for verbose logging)
DEBUG_MODE=false

# Temporary file cleanup (set to false to keep temp files for debugging)
CLEANUP_TEMP_FILES=true 